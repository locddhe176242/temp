<div class="blog-overdetail-style2">
   <div class="iq-blog-image pe-0 pe-md-5">
      <a href="{{path}}blog-details.html" class="blog-image d-block overflow-hidden">
         <img src="{{path}}assets/images/{{blog-image}}" alt="blog-image" class="img-fluid w-100" loading="lazy">
      </a>
   </div>   
   <div class="iq-post-details bg-white p-3 p-md-4 position-relative shadow">
      <div class="iq-blog-meta mb-3">
         <ul class="list-inline">
            <li class="list-inline-item fw-500 iq-blog-cat me-4">
               <a href="{{path}}blog-category.html">{{blog-category}}</a>
            </li>
            <li class="list-inline-item fw-500">
               <a href="{{path}}blog-date.html" class="text-body">{{blog-publish-date}}</a>
            </li>
         </ul>
      </div>
      <div class="blog-title">
         <a href="{{path}}blog-details.html">
            <h5 class="text-capitalize">{{blog-title}}</h5>
         </a>
      </div>
   </div>
</div>