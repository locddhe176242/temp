{{#extend 'layouts/default' title="track-order" active="track-order" path="./"}}
{{#content "content"}}
<div class="sign-in-page position-relative">
   <div class="container">
      <div
         class="row justify-content-center align-items-center height-self-center h-100">
         <div class="col-lg-5 col-md-12 align-self-center">
            <div class="sign-user_card position-relative bg-white mx-auto">
               <div class="logo-img text-center mb-5">
                  {{> components/widgets/logo color="true"}}
               </div>
               <p>To track your order please enter your Order ID in the box
                  below and press the "Track" button. This was
                  given to you on your receipt and in the confirmation email you
                  should have received.
               </p>
               <form method="post">
                  <div class="custom-form-field">
                     <label>Order ID</label>
                     <input type="text" name="order-id"
                        class="form-control mb-5"
                        placeholder="Enter your order id. Found in your order confirmation email."
                        required>
                  </div>
                  <div class="custom-form-field">
                     <label>Billing email</label>
                     <input type="email" name="order-email"
                        class="form-control mb-5"
                        pattern="^[a-zA-Z0-9._%+-]+@gmail\.com$"
                        placeholder="Email you used during checkout." required>
                  </div>
                  <div class="button-primary">
                     {{> components/widgets/button button-text="Track Order"
                     button-url="my-account.html" }}
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>
{{/content}}
{{/extend}}