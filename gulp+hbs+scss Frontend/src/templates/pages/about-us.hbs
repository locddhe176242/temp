<div class="section-padding">
   <div class="container position-relative">
      <div class="row pt-5">
         <div class="col-lg-4 col-md-6 text-center">
            {{> components/widgets/fancybox fancybox-image="/general/doctor.svg" fancybox-title="Qualified Doctors" fancybox-desc="A person who holds a degree recognised by the Medical Council  is registered" btn-url="service1.html"}}
         </div>
         <div class="col-lg-4 col-md-6 mt-5 mt-md-0 text-center">
            {{> components/widgets/fancybox fancybox-image="/general/treatment.svg" fancybox-title="Trusted Treatment" fancybox-desc="KiviCare has many types of treatment to relieve symptoms for all types illness." btn-url="service1.html"}}
         </div>
         <div class="col-lg-4 col-md-12 mt-5 mt-lg-0 text-center">
            {{> components/widgets/fancybox fancybox-image="/general/service.svg" fancybox-title="24/7 Services" fancybox-desc="KiviCare is at your service 24×7 aiming to provide the best services of medical" btn-url="service1.html"}}
         </div>
      </div>
   </div>
</div>
<div class="bg-primary-subtle section-padding">
   <div class="container position-relative">
      <div class="row">
         <div class="col-md-6 pe-md-5">
            {{> components/widgets/scrolling-text scroll-title="about us" }}
            {{> components/widgets/title sub-title="about kivicare" right-text="Health  " left-text="Commitments" title-description="We are ready to provide you with any Medical, health and fitness help as well as prepare a business plan. We are ready to provide you with any Medical, health and fitness help as well as prepare a business plan."}}
            <div class="block-progressbar">
               <ul class="list-inline m-0">
                  <li class="mb-4">
                     {{> components/widgets/progressbar progress-title="Successful Operations" progress-value="80"}}
                  </li>
                  <li class="mb-4">
                     {{> components/widgets/progressbar progress-title="Empathy for Patients" progress-value="90"}}
                  </li>
                  <li>
                     {{> components/widgets/progressbar progress-title="Hygiene" progress-value="100"}}
                  </li>
               </ul>
            </div>
            <div class="d-flex  gap-4 mt-5 flex-column flex-lg-row mb-5 mb-md-0">
               <div>
                  <h4 class="fw-normal">Briar Ford</h4>
                  <p class="text-primary text-uppercase fw-bold">CEO &amp; Founder</p>
               </div>
               <div class="sign-image">
                  <img src="{{path}}assets/images/general/signature.png" alt="" class="img-fluid mb-5">
               </div>
            </div>
         </div>
         <div class="col-md-6">
            <img src="{{path}}assets/images/pages/about-banner.webp" alt="banner" class="img-fluid">
         </div>
      </div>
   </div>
</div>
<div class="section-padding testimonial-section">
   <div class="container position-relative">
      {{> components/widgets/scrolling-text scroll-title="Testimonails" }}
      <div class="row align-items-center">
         <div class="col-md-6 position-relative">
            {{> components/widgets/title sub-title="testimonials" right-text="What Our " left-text="Patients Says" }}
         </div>
         <div class="col-md-6 position-relative">
            <div class="overflow-hidden swiper swiper-general"  data-slide="1" data-laptop="1" data-tab="1" data-mobile="1" data-mobile-sm="1" data-autoplay="true" data-loop="true"  data-navigation="true" data-pagination="true">
               <ul  class="p-0 m-0 mb-2 swiper-wrapper list-inline">
                  <li class="swiper-slide">
                     {{> components/widgets/testimonial-standard testimonial-image="/testimonial/user-1.webp" testimonial-user="Moric Horgon" testimonial-meta="Patient" testimonial-content="“You can’t go wrong here. I receive the best care and attention. The nursing staff and doctors are amazing and take their time with you. I felt better walking out here every time.”"}}
                  </li>
                  <li class="swiper-slide">
                     {{> components/widgets/testimonial-standard testimonial-image="/testimonial/user-2.webp" testimonial-user="Julia Roberts" testimonial-meta="Healthcare" testimonial-content="“Still very professional but a much more relaxed atmosphere. This makes for a more comfortable experience which is helpful in dealing with medical issues.”"}}
                  </li>
                  <li class="swiper-slide">
                     {{> components/widgets/testimonial-standard testimonial-image="/testimonial/user-3.webp" testimonial-user="Jack leo" testimonial-meta="COO company" testimonial-content="“It has been very effective, in my opinion. It has made everyone more relaxed in a very comfortable atmosphere. We have always felt like family here, even more so now.”"}}
                  </li>
               </ul>
               <div class="arrow-joint">
                  <div class="swiper-button swiper-button-next"></div>
                  <div class="swiper-button swiper-button-prev"></div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
