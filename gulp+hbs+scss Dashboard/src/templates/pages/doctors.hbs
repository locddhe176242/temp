            <div class="col">
                {{> pages/widget/doctor-info DrProfile="doctor/7.webp" DoctorName="Dr. Benjamin Davis" DoctorCategory="Skin Specialist" PatientList="120 patients served" WorkingTime=" Monday - Friday"}}
