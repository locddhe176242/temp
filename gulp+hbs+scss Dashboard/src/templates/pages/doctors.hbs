                {{> pages/widget/doctor-info DrProfile="doctor/3.webp" DoctorName="Dr. Ethan Rodriguez" DoctorCategory="Skin Specialist" PatientList="120 patients served" WorkingTime=" Monday - Friday"}}
            </div>
            <div class="col">
                {{> pages/widget/doctor-info DrProfile="doctor/4.webp" DoctorName="Dr. Alexandra Johnson" DoctorCategory="Skin Specialist" PatientList="120 patients served" WorkingTime=" Monday - Friday"}}
            </div>
            <div class="col">
                {{> pages/widget/doctor-info DrProfile="doctor/5.webp" DoctorName="Dr. Christopher Martinez" DoctorCategory="Skin Specialist" PatientList="120 patients served" WorkingTime=" Monday - Friday"}}
            </div>
            <div class="col">
                {{> pages/widget/doctor-info DrProfile="doctor/6.webp" DoctorName="Dr. Samantha Taylor" DoctorCategory="Skin Specialist" PatientList="120 patients served" WorkingTime=" Monday - Friday"}}
