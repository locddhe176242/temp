{{#extend layout title="Doctors" active="doctors" path="./" isSelect2="true" isTour="true" isFlatpickr="true"
isBanner="false" isHeader="true"}}
{{#content "content"}}

{{> pages/widget/top-nav}}
<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <h4>All Doctors</h4>
            <span>More Than 25+ New Doctors</span>
        </div>
        <button class="btn btn-primary " type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddDoctor" aria-controls="offcanvasAddDoctor">
            <span class="btn-inner">
                <span class="text d-inline-block align-middle">Add New</span>
                <span class="icon d-inline-block align-middle ms-1 ps-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 8 8" fill="none">
                        <path
                            d="M7.32046 4.70834H4.74952V7.25698C4.74952 7.66734 4.41395 8 4 8C3.58605 8 3.25048 7.66734 3.25048 7.25698V4.70834H0.679545C0.293423 4.6687 0 4.34614 0 3.96132C0 3.5765 0.293423 3.25394 0.679545 3.21431H3.24242V0.673653C3.28241 0.290878 3.60778 0 3.99597 0C4.38416 0 4.70954 0.290878 4.74952 0.673653V3.21431H7.32046C7.70658 3.25394 8 3.5765 8 3.96132C8 4.34614 7.70658 4.6687 7.32046 4.70834Z"
                            fill="currentColor" />
                    </svg>
                </span>
            </span>
         </button>
    </div>
    <div class="card-body pt-0">
        <div class="row row-cols-xl-3 row-cols-md-2 row-cols-sm-2 row-cols-1">
            <div class="col">
                {{> pages/widget/doctor-info DrProfile="doctor/1.webp" DoctorName="Dr.Amine Louis" DoctorCategory="Skin Specialist" PatientList="120 patients served" WorkingTime=" Monday - Friday"}}
