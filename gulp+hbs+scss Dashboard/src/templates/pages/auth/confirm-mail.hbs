{{#extend 'layouts/dashboard/simple' isSidebar="false" isNavbar="false"
isBanner="false" isPageContainer="false"
title="confirm-mail" active="auth-confirm-mail" path="../" }}
{{#content "content"}}
<section class="login-content"
    style="background: url(../../assets/images/dashboard/sign-in.jpg); background-size: cover;background-repeat: no-repeat;">
    <div class="container">
        <div
            class="row d-flex align-items-center justify-content-center vh-100 w-100 m-0">
            <div class="col-lg-5 col-md-12 align-self-center">
                <div class="card p-0 mb-0">
                    <div class="card-body auth-card">
                        <div class="logo-img">
                            <a href="{{path}}index.html"
                                class="navbar-brand d-flex align-items-center justify-content-center mb-5">
                                {{> components/widgets/logo color="true"}}
                            </a>
                        </div>
                        <h2 class="mt-3">Success !</h2>
                        <p class="cnf-mail mb-1">An email has been sent to
                            youremail@domain.com. Please check for an
                            email from the company and click on the included
                            link to reset your password.</p>
                        <div class="d-inline-block w-100">
                            <a href="{{path}}index.html"
                                class="btn btn-primary mt-3 w-100">Back to
                                Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{/content}}
{{/extend}}