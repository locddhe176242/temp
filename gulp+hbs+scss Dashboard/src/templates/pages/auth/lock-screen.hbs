{{#extend 'layouts/dashboard/simple' isSidebar="false" isNavbar="false" isBanner="false" isPageContainer="false"
title="lock-screen" active="auth-lock-screen" path="../" }}
{{#content "content"}}

<section class="login-content"
   style="background: url(../../assets/images/dashboard/sign-in.jpg); background-size: cover;background-repeat: no-repeat;">
   <div class="container">
      <div class="row d-flex align-items-center justify-content-center vh-100 w-100 m-0">
         <div class="col-lg-5 col-md-12 align-self-center">
            <div class="card p-0 mb-0">
               <div class="card-body auth-card">
                  <div class="logo-img">
                     <a href="{{path}}index.html"
                        class="navbar-brand d-flex align-items-center justify-content-center mb-5">
                        {{> components/widgets/logo color="true"}}
                     </a>
                  </div>
                  <img src="{{path}}assets/images/avatars/01.png" class="rounded avatar-80 mb-3">
                  <h2 class="mb-2">Hi ! Ruben Dokidis</h2>
                  <p>Enter Your Password To Access The Admin.</p>
                  <form>
                     <div class="row">
                        <div class="col-lg-12">
                           <div class="floating-label form-group">
                              <label for="password" class="form-label">Password</label>
                              <input type="password" class="form-control" id="password" aria-describedby="password"
                                 placeholder=" ">
                           </div>
                        </div>
                     </div>
                     <button type="submit" class="btn btn-primary w-100">Login</button>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>   
</section>

{{/content}}
{{/extend}}