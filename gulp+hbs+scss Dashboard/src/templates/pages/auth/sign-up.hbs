{{#extend 'layouts/dashboard/simple' isSidebar="false" isNavbar="false"
isBanner="false" isPageContainer="false"
title="signup" active="auth-sign-up" path="../" }}
{{#content "content"}}

<div class="login-content"
  style="background: url(../assets/images/dashboard/sign-in.jpg); background-size: cover;background-repeat: no-repeat;">
  <div class="container">
    <div
      class="row d-flex align-items-center justify-content-center vh-100 w-100 m-0">
      <div class="col-lg-5 col-md-12 align-self-center">
        <div class="card p-0 mb-0">
          <div class="card-body auth-card">
            <div class="logo-img">
              <a href="{{path}}index.html"
                class="navbar-brand d-flex align-items-center justify-content-center mb-5">
                {{> components/widgets/logo color="true"}}
              </a>
            </div>
            <form method="post">
              <div class="custom-form-field">
                <input type="text" name="user-name" class="form-control mb-5"
                  placeholder="Your email id *" required>
              </div>
              <p class="mb-5">Your personal data will be used to support your
                experience throughout this
                website, manage access to your account, and serve other purposes
                described in our <a href="#">Privacy Policy</a>.</p>
              <button type="button" class="btn btn-primary">
                <span class="btn-inner">
                  <span class="text d-inline-block align-middle">Register</span>
                  <span class="icon d-inline-block align-middle ms-1 ps-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8"
                      viewBox="0 0 8 8" fill="none">
                      <path
                        d="M7.32046 4.70834H4.74952V7.25698C4.74952 7.66734 4.41395 8 4 8C3.58605 8 3.25048 7.66734 3.25048 7.25698V4.70834H0.679545C0.293423 4.6687 0 4.34614 0 3.96132C0 3.5765 0.293423 3.25394 0.679545 3.21431H3.24242V0.673653C3.28241 0.290878 3.60778 0 3.99597 0C4.38416 0 4.70954 0.290878 4.74952 0.673653V3.21431H7.32046C7.70658 3.25394 8 3.5765 8 3.96132C8 4.34614 7.70658 4.6687 7.32046 4.70834Z"
                        fill="currentColor" />
                    </svg>
                  </span>
                </span>
              </button>
            </form>
            <div class="d-flex align-items-center mt-5 justify-content-center">
              <p class="text-center mb-0"><span class="signup-rtl-space">Don't
                  Have An Account Yet?</span><a
                  href="{{path}}auth/sign-in.html">Sign In</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{/content}}
{{/extend}}